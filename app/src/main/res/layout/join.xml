<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ti_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@+id/ti_logo"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/id"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ti_logo"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        android:layout_marginTop="20dp"
        android:text="등록번호"
        android:textSize="20sp"/>
    <EditText
        android:layout_margin="5dp"
        android:id="@+id/id_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/id"
        android:hint="등록번호를 입력하세요"/>
    <Button
        android:id="@+id/check"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/id_in"
        app:layout_constraintTop_toBottomOf="@+id/id"
        android:text="중복확인"/>

    <TextView
        android:id="@+id/eat"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식사량"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/id_in" />

    <EditText
        android:id="@+id/eat_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/eat"
        android:hint="식사량 입력하세요"/>

    <TextView
        android:id="@+id/drink"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물양"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/eat_in" />

    <EditText
        android:id="@+id/drink_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/drink"
        android:hint="물양 입력하세요"/>

    <TextView
        android:id="@+id/poop"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대변 횟수"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/drink_in" />

    <EditText
        android:id="@+id/poop_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/poop"
        android:hint="대변 횟수를 입력하세요"/>
    <TextView
        android:id="@+id/pee"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소변 횟수"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/poop_in" />

    <EditText
        android:id="@+id/pee_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/pee"
        android:hint="소변 횟수를 입력하세요"/>

    <Button
        android:id="@+id/medicine"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/pee_in"
        android:text="약추가"/>

    <Button
        android:id="@+id/join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="등록"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="66dp" />


</androidx.constraintlayout.widget.ConstraintLayout>