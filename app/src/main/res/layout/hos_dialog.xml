<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toTopOf="parent"
        android:text="이름"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/name_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:hint="동물병원 이름" />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/name_in"
        android:text="주소"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/address_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/address"
        android:hint="동물병원 주소" />
    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/address_in"
        android:text="전화번호"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/call_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/call"
        android:hint="동물병원 전화번호" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>