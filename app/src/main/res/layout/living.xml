<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/mine">
        <ImageButton
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/today"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        android:text="오늘의 생활"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/eat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today"
        android:src="@drawable/food"/>
    <TextView
        android:id="@+id/eatT"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/eat"
        app:layout_constraintTop_toBottomOf="@+id/today"
        android:textSize="20dp"
        android:text="식사량"/>
    <TextView
        android:id="@+id/eatM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/eat"
        app:layout_constraintTop_toBottomOf="@+id/eatT"
        android:text="밥: "/>
    <TextView
        android:id="@+id/drinkM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/eat"
        app:layout_constraintTop_toBottomOf="@+id/eatM"
        android:text="물: "/>
    <ImageButton
        android:id="@+id/eatP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:src="@drawable/plus"
        app:layout_constraintLeft_toRightOf="@+id/eatM"
        app:layout_constraintTop_toBottomOf="@+id/eatT"/>
    <ImageView
        android:id="@+id/poo"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eat"
        android:src="@drawable/poo"/>
    <TextView
        android:id="@+id/pooT"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/poo"
        app:layout_constraintTop_toBottomOf="@+id/eat"
        android:text="배변량"/>
    <TextView
        android:id="@+id/peeM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/poo"
        app:layout_constraintTop_toBottomOf="@+id/pooT"
        android:text="소변: "/>
    <TextView
        android:id="@+id/pooM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/poo"
        app:layout_constraintTop_toBottomOf="@+id/peeM"
        android:text="대변: "/>
    <ImageButton
        android:id="@+id/pooP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:src="@drawable/plus"
        app:layout_constraintLeft_toRightOf="@+id/pooM"
        app:layout_constraintTop_toBottomOf="@+id/pooT"/>
    <ImageView
        android:id="@+id/medi"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poo"
        android:src="@drawable/medi"/>
    <TextView
        android:id="@+id/mediT"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="약"
        app:layout_constraintLeft_toRightOf="@+id/medi"
        app:layout_constraintTop_toBottomOf="@+id/poo" />
    <TextView
        android:id="@+id/E_mediM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/medi"
        app:layout_constraintTop_toBottomOf="@+id/mediT"
        android:text="먹는 약: "/>
    <TextView
        android:id="@+id/C_mediM"
        android:padding="7.5dp"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/medi"
        app:layout_constraintTop_toBottomOf="@+id/E_mediM"
        android:text="바르는 약: "/>
    <ImageButton
        android:id="@+id/mediP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:src="@drawable/plus"
        app:layout_constraintLeft_toRightOf="@+id/E_mediM"
        app:layout_constraintTop_toBottomOf="@+id/mediT"/>



</androidx.constraintlayout.widget.ConstraintLayout>